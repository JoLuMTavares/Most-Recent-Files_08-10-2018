<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form action="POST">
      <input type="text" name="product-name" id="productname" class="product-name">
      <input type="text" name="product-price" id="productprice" class="product-price">
      <select name="product-category" id="productcategory" class="product-category">
          <!-- <option value=""></option> -->
          <option value="camera">Camera</option>
          <option value="electronics">Electronics</option>
          <option value="Laptop">Laptop</option>
          <option value="mPhone">Mobile Phone</option>          
          <option value="tablet">Tablet</option>
      </select>
      <input type="submit" value="Add Product">
    </form>
    <table id="products">
      <thead>
        <th>ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Action</th>
      </thead>
      <tbody>
          <% products_array.forEach( product =>{ %>
            <tr>
                <td><%= product._id %></td>
                <td><%= product.product_name %></td>
                <td><%= product.price %></td>
                <td><%= product.category %></td>
                <td >
                    <a href="edit/<%= product._id%>" > Edit</a>
                    <a href="delete/<%= product._id%>" > delete</a>
                </td>
            </tr>
        <%});%>
      </tbody>
    </table>
  </body>
</html>
